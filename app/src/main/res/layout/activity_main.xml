<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="Hello World!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="Hello World!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="@string/hello"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:hint="Enter a value" />

    <Button
        android:id="@+id/btnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/click" />

    <Button
        android:id="@+id/btnAlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AlertDialog Activity" />

    <Button
        android:id="@+id/btnImplicit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Implicit Activity" />

    <Button
        android:id="@+id/btnJetPack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JetPack Activity" />

    <Button
        android:id="@+id/btnSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spinner Activity" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Activity" />

    <Button
        android:id="@+id/btnWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WebView Activity" />

   <Button
        android:id="@+id/btnListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ListView Activity" />
    <Button
        android:id="@+id/btnRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView Activity" />

 <Button
        android:id="@+id/btnInteraction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interaction Activity" />
    <Button
        android:id="@+id/btnFirebaseReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FirebaseReg Activity" />
    <Button
        android:id="@+id/btnRealtimeDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RaltimeDatabase Activity" />
    <Button
        android:id="@+id/btnFirestoreDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FirestoreDatabase Activity" />

    <Button
        android:id="@+id/btnLocationActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Activity" />

</LinearLayout>
</ScrollView>